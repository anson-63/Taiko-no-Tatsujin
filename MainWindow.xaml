<Window x:Class="Taiko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taiko"
        mc:Ignorable="d"
        Title="Taiko" Height="720" Width="1280"
        Icon="/asset/icon.ico"
        Loaded="Window_Loaded"
        PreviewKeyDown="Window_PreviewKeyDown" PreviewMouseDown="Window_PreviewMouseDown"
        ClipToBounds="False"
        ResizeMode="NoResize"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <!-- toggleFade: 2s cycle (1s to 0, AutoReverse back to 1), Sine ease-in-out, repeat forever -->
        <Storyboard x:Key="toggleFade">
            <DoubleAnimation Storyboard.TargetName="ActionText"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0"
                             Duration="0:0:1"
                             AutoReverse="True"
                             RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <!-- start the animation when the window is loaded -->
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource toggleFade}" />
        </EventTrigger>
    </Window.Triggers>
    <Viewbox Stretch="UniformToFill">
        <Grid Width="1280" Height="720">
            <Grid>
                <Image x:Name="TitleImage" Source="pack://application:,,,/asset/title_screen.png" Stretch="UniformToFill" />
                <Image x:Name="Logo" Source="pack://application:,,,/asset/logo.png" Height="200"/>

                <!-- Action text with stroke-like outline and animation -->
                <TextBlock x:Name="ActionText"
                       Text="Click or Press Any Key!"
                       Foreground="White"
                       FontSize="50"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Panel.ZIndex="2" Margin="0,479,0,0">
                    <TextBlock.Effect>
                        <!-- outline/glow effect; tweak Color/BlurRadius for stronger or crisper stroke -->
                        <DropShadowEffect Color="Red"
                                      ShadowDepth="0"
                                      BlurRadius="20"
                                      Opacity="1" />
                    </TextBlock.Effect>
                </TextBlock>

                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="Transparent" Margin="0" />
            </Grid>
        </Grid>
    </Viewbox>
    
</Window>