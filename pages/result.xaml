<Page x:Class="Taiko.pages.result"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Taiko.pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="result"
      PreviewMouseDown="NavToMain"
      PreviewKeyDown="NavToMain"
      >
    <Page.Resources>
        <Storyboard x:Key="BgScroll">
            <DoubleAnimation
                Storyboard.TargetName="MainContentTransform"
                Storyboard.TargetProperty="Y"
                From="-720" To="0" 
                Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="CharacterHop">
            <DoubleAnimation 
                Storyboard.TargetProperty="(Image.RenderTransform).(TranslateTransform.Y)"
                From="0" 
                To="-30" 
                Duration="0:0:0.25" 
                AutoReverse="True" 
                RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <PowerEase Power="2" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>

    <Grid x:Name="RootGrid" Background="Transparent">
        <Grid.Resources>
            <Style TargetType="Image" x:Key="lil_man">
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="Stretch" Value="Uniform"/>
                <Setter Property="MaxHeight" Value="400"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <TranslateTransform Y="0"/>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Grid x:Name="MainContent">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="MainContentTransform" Y="-720"/>
            </Grid.RenderTransform>

            <Rectangle x:Name="BgRectLayer">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="pack://application:,,,/asset/settings.png"
                             Stretch="None" TileMode="Tile"
                             ViewportUnits="RelativeToBoundingBox" Viewport="0,0,0.4,1"/>
                </Rectangle.Fill>
            </Rectangle>
            <Image x:Name="Difficulty" Source="pack://application:,,,/asset/ez_result.png" MaxHeight="200" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="180,105,0,0"/>

            <Border x:Name="ScoreBoardContainer"
                Width="500"
                Background="#E6E6E6"
                Opacity="0.8" 
                CornerRadius="15"
                BorderBrush="Black"
                BorderThickness="2"
                Padding="30,20"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="600,50,0,0">
                <Grid>
                    <StackPanel x:Name="SinglePlayer">
                        <TextBlock x:Name="ScoreText"
                           Text="Total score: "
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="0,0,0,5"/>

                        <TextBlock x:Name="PerfectText"
                           Text="Perfect: "
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="0,0,0,5"/>

                        <TextBlock x:Name="GoodText"
                           Text="Good: "
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="0,0,0,5"/>

                        <TextBlock x:Name="BadText"
                           Text="Bad: "
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="Black"/>
                    </StackPanel>
                    <StackPanel x:Name="MultiPlayer" Visibility="Collapsed">
                        <TextBlock x:Name="P1ScoreText"
                           Text="Player 1 Score: "
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="0,0,0,5"/>
                        <TextBlock x:Name="P2ScoreText"
                           Text="Player 2 Score: "
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="0,0,0,5"/>
                    </StackPanel>
                </Grid>
            </Border>
            <Grid x:Name="Win_lil_man" Visibility="Collapsed">
                <Grid.RenderTransform>
                    <TranslateTransform Y="0"/>
                </Grid.RenderTransform>
                <Image Source="pack://application:,,,/asset/group.png" MaxHeight="400" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                <Image Source="pack://application:,,,/asset/man_win.png"
                   Style="{StaticResource lil_man}"
                   Margin="0,0,830,20"
                   />
                <Image Source="pack://application:,,,/asset/girl_win.png" 
                   Style="{StaticResource lil_man}"
                   Margin="0,0,141,20"/>
            </Grid>

            <Grid x:Name="Lose_lil_man" Visibility="Visible">
                <Grid.RenderTransform>
                    <TranslateTransform Y="0"/>
                </Grid.RenderTransform>
                <Image Source="pack://application:,,,/asset/man_lose.png" 
                   Style="{StaticResource lil_man}"
                   Margin="0,0,800,20"/>
                <Image Source="pack://application:,,,/asset/girl_lose.png" 
                   Style="{StaticResource lil_man}"
                   Margin="0,0,271,20"/>
            </Grid>
            
            <Image Source="pack://application:,,,/asset/result.png" 
                   MaxWidth="330" 
                   VerticalAlignment="Top" HorizontalAlignment="Left"/>
            
        </Grid>
    </Grid>
</Page>
