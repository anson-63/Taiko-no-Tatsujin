<Page x:Class="Taiko.pages.Controlpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Taiko.pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Song Selection"
      Background="Transparent"
      FontFamily="TnT, Meiryo, sans-serif">
    <Page.Resources>
        <Style x:Key="KeyCapBtnStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="GlowBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="BorderBrush" Value="Black"/>
                                <Setter Property="BorderThickness" Value="4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Background="Transparent" Margin="0">
        <Grid.Resources>
            <!-- implicit TextBlock style: applies to all TextBlocks in this Grid -->
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="TextAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>

            <!-- reusable Border style -->
            <Style x:Key="PanelBorder" TargetType="Border">
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Background" Value="#FFF6EAD4"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="MaxWidth" Value="800"/>
            </Style>
            <Style x:Key="RoundedButton" TargetType="Button">
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border 
                                x:Name="OKbutton"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      RecognizesAccessKey="True"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="OKbutton" Property="Background" Value="#ffb547"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FFEFEFEF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="RoundedComboBox" TargetType="ComboBox">
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <Border x:Name="Background" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="20"/>

                                <ToggleButton Grid.ColumnSpan="2" 
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Focusable="false"
                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                  ClickMode="Press">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="Transparent">
                                                <Path x:Name="Arrow" 
                                          Fill="Black" 
                                          HorizontalAlignment="Right" 
                                          VerticalAlignment="Center" 
                                          Margin="0,0,15,0"
                                          Data="M 0 0 L 4 4 L 8 0 Z"/>
                                            </Border>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>

                                <ContentPresenter x:Name="ContentSite"
                                      IsHitTestVisible="False" 
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                      Margin="15,0,35,0"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"/>

                                <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                    <Border x:Name="DropDownBorder" 
                                Background="White" 
                                BorderBrush="Black" 
                                BorderThickness="0" 
                                CornerRadius="5"
                                Margin="0,2,0,0"
                                MinWidth="{TemplateBinding ActualWidth}" 
                                MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <ScrollViewer SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Image x:Name="settingImage" Source="pack://application:,,,/asset/settings.png" Stretch="UniformToFill" />

        <Border Style="{StaticResource PanelBorder}" Margin="20" Panel.ZIndex="1" MinHeight="500" MinWidth="700">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- header -->
                    <RowDefinition Height="Auto"/>
                    <!-- language row -->
                    <RowDefinition Height="Auto"/>
                    <!-- control row -->
                    <RowDefinition Height="Auto" />
                    <!-- multiplier (pushes button to bottom) -->
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <!-- filler (pushes button to bottom) -->
                    <RowDefinition Height="Auto"/>
                    <!-- button row -->
                </Grid.RowDefinitions>
                <!-- implicit style supplies FontSize/TextWrapping/etc. -->
                <TextBlock Text="Game Settings:" Grid.Row="0"/>
                <!-- nested border uses the same style (or create a different one if needed) -->
                <Border Style="{StaticResource PanelBorder}" Padding="8" MinWidth="650" Height="64" Width="664" Grid.Row="1">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- label -->
                            <ColumnDefinition Width="0"/>
                            <!-- spacer -->
                            <ColumnDefinition/>
                            <!-- control stretches to right edge -->
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Language:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0"/>
                        <Border Grid.Column="2" CornerRadius="8" HorizontalAlignment="Right" VerticalAlignment="Center" Background="White">
                            <TextBlock Text="English(en)" Background="Transparent" VerticalAlignment="Center" Margin="10 0 0 0" Width="300"/>
                        </Border>
                    </Grid>
                </Border>
                <Border Style="{StaticResource PanelBorder}" Padding="8" MinWidth="650" Height="60" Width="664" Margin="0 10 0 0" Grid.Row="2">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- label -->
                            <ColumnDefinition Width="0"/>
                            <!-- spacer -->
                            <ColumnDefinition/>
                            <!-- control stretches to right edge -->
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Control:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0"/>


                        <!--Key Config-->
                        <StackPanel Height="60" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="265,0,0,0">

                            <Border CornerRadius="15" Background="Transparent" Margin="5,0">
                                <RadioButton x:Name="Blue_Left" GroupName="Keys" Style="{StaticResource KeyCapBtnStyle}" Click="key_config">
                                    <Grid IsHitTestVisible="False">
                                        <Image Source="pack://application:,,,/asset/blue_cap.png" Height="40" Width="40" />
                                        <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="0,7,0,0">A</TextBlock>
                                    </Grid>
                                </RadioButton>
                            </Border>

                            <Border CornerRadius="15" Background="Transparent" Margin="5,0">
                                <RadioButton x:Name="Red_Left" GroupName="Keys" Style="{StaticResource KeyCapBtnStyle}" Click="key_config">
                                    <Grid IsHitTestVisible="False">
                                        <Image Source="pack://application:,,,/asset/red_cap.png" Height="40" Width="40" />
                                        <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="0,7,0,0">S</TextBlock>
                                    </Grid>
                                </RadioButton>
                            </Border>

                            <Border CornerRadius="15" Background="Transparent" Margin="5,0">
                                <RadioButton x:Name="Red_Right" GroupName="Keys" Style="{StaticResource KeyCapBtnStyle}" Click="key_config">
                                    <Grid IsHitTestVisible="False">
                                        <Image Source="pack://application:,,,/asset/red_cap.png" Height="40" Width="40" />
                                        <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="0,7,0,0">D</TextBlock>
                                    </Grid>
                                </RadioButton>
                            </Border>

                            <Border CornerRadius="15" Background="Transparent" Margin="5,0">
                                <RadioButton x:Name="Blue_Right" GroupName="Keys" Style="{StaticResource KeyCapBtnStyle}" Click="key_config">
                                    <Grid IsHitTestVisible="False">
                                        <Image Source="pack://application:,,,/asset/blue_cap.png" Height="40" Width="40" />
                                        <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="0,7,0,0">F</TextBlock>
                                    </Grid>
                                </RadioButton>
                            </Border>

                        </StackPanel>
                        <!--End Key Config-->

                    </Grid>

                </Border>

                <Border Style="{StaticResource PanelBorder}" Padding="8" MinWidth="650" Height="64" Width="664" Grid.Row="3" Margin="0,10,0,0">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- label -->
                            <ColumnDefinition Width="0"/>
                            <!-- spacer -->
                            <ColumnDefinition/>
                            <!-- control stretches to right edge -->
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Mutiplier:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0"/>
                        <Border Grid.Column="2" CornerRadius="8" HorizontalAlignment="Right" VerticalAlignment="Center" Background="White">
                            <ComboBox x:Name="MultiplierCombo" 
                                Grid.Column="2"
                                Style="{StaticResource RoundedComboBox}"
                                HorizontalAlignment="Right" VerticalAlignment="Center"
                                Width="300" Height="50"
                                SelectedIndex="0" 
                              SelectionChanged="Multiplier">
                                <ComboBoxItem Content="1x" />
                                <ComboBoxItem Content="2x" />
                                <ComboBoxItem Content="3x" />
                                <ComboBoxItem Content="4x" />
                            </ComboBox>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource PanelBorder}" Padding="8" MinWidth="650" Height="64" Width="664" Grid.Row="4" Margin="0,10,0,0">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- label -->
                            <ColumnDefinition Width="0"/>
                            <!-- spacer -->
                            <ColumnDefinition/>
                            <!-- control stretches to right edge -->
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Multiplayer:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0"/>
                        <Border Grid.Column="2" CornerRadius="8" HorizontalAlignment="Right" VerticalAlignment="Center" Background="White">
                            <CheckBox x:Name="MultiplayerCheckBox" 
                                Grid.Column="2"
                                HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center"
                                Width="300" Height="40"
                                Checked="MultiplayerCheckBox_Checked"
                                Unchecked="MultiplayerCheckBox_Unchecked">
                                <TextBlock Text="Enable Multiplayer" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" Margin="0 2 0 0"/>
                            </CheckBox>
                        </Border>
                    </Grid>
                </Border>

                <Border x:Name="Player2Setting"  Style="{StaticResource PanelBorder}" Padding="8" MinWidth="650" Height="60" Width="664" Margin="0 10 0 10" Grid.Row="5" Visibility="Hidden">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- label -->
                            <ColumnDefinition Width="0"/>
                            <!-- spacer -->
                            <ColumnDefinition/>
                            <!-- control stretches to right edge -->
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Player Control:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0"/>


                        <!--Key Config-->
                        <StackPanel Height="60" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="180,0,0,0">

                            <Border CornerRadius="15" Background="Transparent" Margin="5,0">
                                <RadioButton x:Name="P2Blue_Left" GroupName="Keys" Style="{StaticResource KeyCapBtnStyle}" Click="key_config">
                                    <Grid IsHitTestVisible="False">
                                        <Image Source="pack://application:,,,/asset/blue_cap.png" Height="40" Width="40" />
                                        <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="0,7,0,0">H</TextBlock>
                                    </Grid>
                                </RadioButton>
                            </Border>

                            <Border CornerRadius="15" Background="Transparent" Margin="5,0">
                                <RadioButton x:Name="P2Red_Left" GroupName="Keys" Style="{StaticResource KeyCapBtnStyle}" Click="key_config">
                                    <Grid IsHitTestVisible="False">
                                        <Image Source="pack://application:,,,/asset/red_cap.png" Height="40" Width="40" />
                                        <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="0,7,0,0">J</TextBlock>
                                    </Grid>
                                </RadioButton>
                            </Border>

                            <Border CornerRadius="15" Background="Transparent" Margin="5,0">
                                <RadioButton x:Name="P2Red_Right" GroupName="Keys" Style="{StaticResource KeyCapBtnStyle}" Click="key_config">
                                    <Grid IsHitTestVisible="False">
                                        <Image Source="pack://application:,,,/asset/red_cap.png" Height="40" Width="40" />
                                        <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="0,7,0,0">K</TextBlock>
                                    </Grid>
                                </RadioButton>
                            </Border>

                            <Border CornerRadius="15" Background="Transparent" Margin="5,0">
                                <RadioButton x:Name="P2Blue_Right" GroupName="Keys" Style="{StaticResource KeyCapBtnStyle}" Click="key_config">
                                    <Grid IsHitTestVisible="False">
                                        <Image Source="pack://application:,,,/asset/blue_cap.png" Height="40" Width="40" />
                                        <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="0,7,0,0">L</TextBlock>
                                    </Grid>
                                </RadioButton>
                            </Border>

                        </StackPanel>
                        <!--End Key Config-->

                    </Grid>

                </Border>

                <Button
                    x:Name="OkButton"
                    Style="{StaticResource RoundedButton}" 
                    Content="OK"
                    FontSize="30"
                    FontWeight="Bold"
                    Height="60" Width="130" 
                    VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                    Background="Transparent" 
                    BorderThickness="3,3,3,3" BorderBrush="Black"
                    Grid.Row="6"
                    Click="OK" ClickMode="Press"
                    >
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>